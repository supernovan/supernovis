extends layouts/layout.pug

block content
	h1 This is an HTML canvas, this is going to be a game someday, maybe. Kinda depends if making a game in javascript is more fun than doing it in Scala/Java.
	canvas( id="asteroids" width="500" height="500")
	script
		var canvas = document.getElementById("asteroids");
		var context = canvas.getContext("2d");
		context.strokeStyle = "dimgrey";
		context.lineWidth = 5;
		context.rect(75, 75, 250, 250);
		context.stroke();